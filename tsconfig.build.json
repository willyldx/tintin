{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["src/**/*.ts", "index.ts", "tintin.ts", "tinc.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist", "references"]
}
